            <h2>{{ __('backgroundInfo.title') }}</h2>
            
            {{ textArea('backgroundInfo.desc', null, data.is_with_partner, { class: "w-3-4", name: "backgroundInfo.desc", id: "backgroundInfo.desc", autofocus: '', value: data.is_with_partner }) }}
            {{ textArea('form.authority', null, 'form.authority.desc', data.authority, { class: "w-3-4", name: "authority", id: "authority", autofocus: '', value: data.authority }) }}
