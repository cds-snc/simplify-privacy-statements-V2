            {{ textArea('form.personal_information_collected', null, 'form.personal_information_collected.desc', data.personal_information_collected, { class: "w-3-4", name: "personal_information_collected", id: "personal_information_collected", autofocus: '', value: data.personal_information_collected }) }}
            {{ textArea('form.compensation', null, null, data.rcompensation, { class: "w-3-4", name: "compensation", id: "compensation", autofocus: '', value: data.compensation }) }}
            {{ textArea('form.confidentiality', null, null, data.confidentiality, { class: "w-3-4", name: "confidentiality", id: "confidentiality", autofocus: '', value: data.confidentiality }) }}
            {{ textArea('form.administrative_decision', null, null, data.administrative_decision, { class: "w-3-4", name: "administrative_decision", id: "administrative_decision", autofocus: '', value: data.administrative_decision }) }}
            {{ textArea('form.consent', null, null, data.consent, { class: "w-3-4", name: "consent", id: "consent", autofocus: '', value: data.consent }) }}
            {{ textArea('form.is_business', null, null, data.is_business, { class: "w-3-4", name: "is_business", id: "is_business", autofocus: '', value: data.is_business }) }}
            {{ textArea('form.recording_type', null, null, data.recording_type, { class: "w-3-4", name: "recording_type", id: "recording_type", autofocus: '', value: data.recording_type }) }}
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
